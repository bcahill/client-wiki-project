<div class="container">
<%= form_for([@user]) do |f| %>
  <div class="field">
      <%= f.label :full_name  %>
      <%= f.text_field :full_name %>
    </div>

    <div class="field">
      <%= f.label :email  %>
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.text_field :password %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
