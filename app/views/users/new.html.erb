<div class="container">
<%= form_for([@user]) do |f| %>
  <div class="field">
      <%= f.label :full_name  %>
      <%= f.text_field :full_name, class: "field-box" %>
    </div>

    <div class="field">
      <%= f.label :email  %>
      <%= f.text_field :email, class: "field-box" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, class: "field-box" %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
