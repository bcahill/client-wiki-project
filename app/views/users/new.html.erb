<div class="container">
  <div id="site-title">signup</div>
</div>
<div class="container">
<%= form_for([@user]) do |f| %>
  <div class="field">
      <%= f.label :full_name, class: "col-md-4 control-label" %>
      <%= f.text_field :full_name, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :email, class: "col-md-4 control-label" %>
      <%= f.text_field :email, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "col-md-4 control-label" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <div class="field actions">
      <%= f.submit "Sign Up", class: "btn btn-default btn-primary col-md-4"%>
    </div>
  <% end %>
</div>
